{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Backend",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-backend",
      "program": "dotnet",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/backend/Aurora.Api/Aurora.Api.csproj"
      ],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "console": "integratedTerminal",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "https://localhost:7168;http://localhost:5291"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      },
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s/swagger"
      },
      "requireExactSource": false,
      "enableStepFiltering": true,
      "logging": {
        "moduleLoad": false
      }
    },
    {
      "name": "Debug Frontend",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}/frontend",
      "serverReadyAction": {
        "pattern": "Local:.*?(http://localhost:[0-9]+)",
        "uriFormat": "%s",
        "action": "openExternally"
      }
    },
    {
      "name": "Debug Frontend with Backend Ready",
      "type": "node-terminal",
      "request": "launch",
      "preLaunchTask": "build-backend",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}/frontend",
      "serverReadyAction": {
        "pattern": "Local:.*?(http://localhost:[0-9]+)",
        "uriFormat": "%s",
        "action": "openExternally"
      }
    },
    {
      "name": "Backend for Fullstack",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-backend",
      "program": "dotnet",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/backend/Aurora.Api/Aurora.Api.csproj"
      ],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "console": "integratedTerminal",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "https://localhost:7168;http://localhost:5291"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      },
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s/swagger"
      },
      "requireExactSource": false,
      "enableStepFiltering": true,
      "logging": {
        "moduleLoad": false
      }
    },
    {
      "name": "Frontend for Fullstack",
      "type": "node-terminal",
      "request": "launch",
      "preLaunchTask": "wait-for-backend",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}/frontend",
      "serverReadyAction": {
        "pattern": "Local:.*?(http://localhost:[0-9]+)",
        "uriFormat": "%s",
        "action": "openExternally"
      }
    }
  ],
  "compounds": [
    {
      "name": "Debug Fullstack (Both)",
      "configurations": [
        "Backend for Fullstack",
        "Frontend for Fullstack"
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "fullstack",
        "order": 1
      }
    }
  ]
}