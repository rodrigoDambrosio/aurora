{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-backend",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "build",
        "backend/Aurora.Api/Aurora.Api.csproj",
        "--configuration",
        "Debug"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "start-frontend",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "dev"
      ],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "Local:.*http://localhost:[0-9]+"
        }
      }
    },
    {
      "label": "wait-for-backend",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-Command",
        "do { Start-Sleep -Seconds 1; try { $response = Invoke-WebRequest -Uri 'http://localhost:5291/api/health' -UseBasicParsing -TimeoutSec 2 -ErrorAction Stop; Write-Host 'Backend is ready!'; break } catch { Write-Host 'Waiting for backend...' } } while ($true)"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "start-fullstack",
      "dependsOrder": "parallel",
      "dependsOn": [
        "build-backend",
        "start-frontend"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ]
}